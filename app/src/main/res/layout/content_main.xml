<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:currentProgress="10"
        />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:reachedColor="@color/colorAccent"
        app:textColor="@color/colorAccent"
        app:currentProgress="20"
        />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:reachedColor="@color/colorPrimary"
        app:textColor="@color/colorPrimary"
        app:currentProgress="30"
        />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:reachedColor="#dea32c"
        app:textColor="#dea32c"
        app:currentProgress="40"
        />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:reachedColor="#b4532a"
        app:textColor="#b4532a"
        app:currentProgress="50"
        />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:reachedColor="#f15b6c"
        app:textColor="#f15b6c"
        app:currentProgress="60"
        />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:reachedColor="#b2d235"
        app:textColor="#b2d235"
        app:currentProgress="70"
        />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:reachedColor="#5c7a29"
        app:textColor="#5c7a29"
        app:currentProgress="80"
        />

    <com.jwenfeng.numberprogress.NumberProgress
        android:id="@+id/number_progress9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:reachedColor="#ae6642"
        app:textColor="#ae6642"
        app:currentProgress="90"
        />

</LinearLayout>
